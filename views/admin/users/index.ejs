<%- include ('../../partials/header.ejs'); %>
<%- include ('../../partials/navbar.ejs'); %>
<body>
    <div class="container">
        <div class="card center text-center">
            <div class="card-header">
                <h2>Contas de Usuarios</h2><br>
                <div class="text-left">
                    <a name="" id="" class="pull-right btn btn-success" href="/admin/users/create" role="button">Criar Novo Usuario</a>
                </div>
                <hr>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %> </td>
                                <td><%= user.email %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="card-body">
            </div>
        </div>
    </div>
</body> 
<%- include ('../../partials/footer.ejs'); %>
<script>
    function confirmarDelecao(event, form){
        event.preventDefault();
        var decision = confirm('Você quer DELETAR essa categoria ?');
        if(decision){
            form.submit();
        }else{
            console.log('Não, MissClick');
        }
    }
</script>